# To suppress "writable attribute" errors
Attribute:
  enabled: false

LongParameterList:
  enabled: true
  max_statements: 5
  exclude:
    - initialize
    - 'self.call'

ManualDispatch:
  enabled: false

IrresponsibleModule:
  enabled: false

UtilityFunction:
  public_methods_only: true

exclude_paths:
  - spec